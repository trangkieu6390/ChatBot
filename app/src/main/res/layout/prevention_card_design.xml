<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/background_prevention"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/cardprevention">

        <ImageView
            android:padding="20dp"
            android:id="@+id/prevention_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/washhandsoften" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/prevention_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/washhandoften"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>